{
	"compilerOptions": {
		"module": "es2015",
		"target": "es5",
		"lib": ["es2015", "dom"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": "src",
		"experimentalDecorators": true
	},
	"include": [
		"./*.ts",
		"./**/*.ts",
		"src/.spruce/schemas/fields/fieldClassMap.ts"
	],
	"exclude": ["**/node_modules/*", "build/*"]
}
