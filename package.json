{
	"name": "@sprucelabs/schema",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "4.0.3",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "Spruce experience schemas",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-schema",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-schema/issues"
	},
	"scripts": {
		"build": "npm run clean && concurrently \"npm run build.node\"",
		"build.node": "tsc | true",
		"build.browser": "tsc --project tsconfig.browser.json",
		"watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' --fix && npm run lint.tsc",
		"lint.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run lint'",
		"lint.tsc": "tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"test": "jest --no-cache",
		"test.watch": "jest --watch",
		"release": "semantic-release",
		"arkit": "arkit -f src/index.ts -o docs/images/arkit.svg",
		"arkit.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'arkit -f src/index.ts -o docs/images/arkit.svg'"
	},
	"dependencies": {
		"@sprucelabs/error": "^1.3.6",
		"@sprucelabs/log": "^10.2.8",
		"@sprucelabs/path-resolver": "^1.3.4",
		"google-libphonenumber": "^3.2.8",
		"libphonenumber-js": "^1.7.48",
		"mime-db": "^1.43.0",
		"mime-type": "^4.0.0"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^4.0.4",
		"@sprucelabs/test": "^5.2.1",
		"@types/google-libphonenumber": "^7.4.17",
		"@types/lodash": "^4.14.149",
		"@types/mime-db": "^1.27.1",
		"arkit": "^1.6.4",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.0.2",
		"eslint": "^7.4.0",
		"eslint-config-spruce": "^10.5.6",
		"lodash": "^4.17.15",
		"prettier": "^2.0.5",
		"ts-node": "^8.8.2",
		"typescript": "^3.9.6",
		"yarn": "^1.2.1"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			],
			"@babel/preset-typescript"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/build/",
			"<rootDir>/node_modules/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.ts"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/src/.spruce/$1"
		}
	}
}
