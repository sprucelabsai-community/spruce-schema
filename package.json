{
	"name": "@sprucelabs/schema",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "7.0.59",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "Spruce experience schemas",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-schema",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-schema/issues"
	},
	"scripts": {
		"build": "npm run clean && concurrently \"npm run build.node\"",
		"build.node": "tsc | true",
		"build.browser": "tsc --project tsconfig.browser.json",
		"watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' --fix && npm run lint.tsc",
		"lint.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run lint'",
		"lint.tsc": "tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"test": "jest",
		"test.watch": "jest --watch",
		"release": "semantic-release",
		"arkit": "arkit -f src/index.ts -o docs/images/arkit.svg",
		"arkit.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'arkit -f src/index.ts -o docs/images/arkit.svg'",
		"upgrade.base": "yarn upgrade --latest && rm yarn.lock | true && yarn | true && yarn lint.fix | true",
		"up": "yarn upgrade.base && yarn lint && yarn build && yarn test"
	},
	"dependencies": {
		"@sprucelabs/error": "^2.0.35",
		"@sprucelabs/log": "^10.2.83",
		"google-libphonenumber": "^3.2.10",
		"libphonenumber-js": "^1.7.56",
		"mime-db": "^1.44.0",
		"mime-type": "^4.0.0"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^4.0.5",
		"@sprucelabs/test": "^5.3.116",
		"@types/google-libphonenumber": "^7.4.19",
		"@types/lodash": "^4.14.159",
		"@types/mime-db": "^1.43.0",
		"arkit": "^1.6.4",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"eslint": "^7.6.0",
		"eslint-config-spruce": "^10.7.18",
		"lodash": "^4.17.19",
		"prettier": "^2.0.5",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.7",
		"yarn": "^1.22.4"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			],
			"@babel/preset-typescript"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/build/",
			"<rootDir>/node_modules/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.ts"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/src/.spruce/$1"
		}
	}
}
