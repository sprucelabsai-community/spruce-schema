{
	"name": "@sprucelabs/schema",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "3.2.4",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "Spruce experience schemas",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-schema",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-schema/issues"
	},
	"scripts": {
		"build": "npm run clean && concurrently \"npm run build.node\"",
		"build.node": "tsc | true",
		"build.browser": "tsc --project tsconfig.browser.json",
		"watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && npm run lint.tsc",
		"lint.tsc": "tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"test": "jest --no-cache",
		"release": "semantic-release",
		"test.watch": "jest --watch"
	},
	"dependencies": {
		"@sprucelabs/error": "^1.2.0",
		"@sprucelabs/log": "^10.2.2",
		"@sprucelabs/path-resolver": "^1.3.0",
		"google-libphonenumber": "^3.2.8",
		"libphonenumber-js": "^1.7.48",
		"mime-db": "^1.43.0",
		"mime-type": "^3.0.7"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^3.0.4",
		"@sprucelabs/test": "^4.0.0",
		"@types/google-libphonenumber": "^7.4.17",
		"@types/lodash": "^4.14.149",
		"@types/mime-db": "^1.27.1",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.0.2",
		"eslint": "^5",
		"eslint-config-spruce": "^10.5.3",
		"lodash": "^4.17.15",
		"prettier": "^1.19",
		"ts-node": "^8.8.2",
		"typescript": "^3.8",
		"yarn": "^1.2.1"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			],
			"@babel/preset-typescript"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/build/",
			"<rootDir>/node_modules/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.ts"
		],
		"moduleNameMapper": {
			"^#spruce:schema/(.*)$": "<rootDir>/src/$1",
			"^#spruce/(.*)$": "<rootDir>/.spruce/$1"
		}
	}
}
