{
	"name": "@sprucelabs/schema",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "19.0.1",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "Static and dynamic binding plus runtime validation and transformation to ensure your app is sound. ðŸ¤“",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-schema",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-schema/issues"
	},
	"scripts": {
		"build": "yarn clean && yarn build.tsc && yarn build.resolve-paths",
		"build.tsc": "tsc",
		"build.browser": "tsc --project tsconfig.browser.json",
		"build.watch": "yarn build.tsc -w",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' --fix && yarn lint.tsc",
		"lint.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'yarn lint'",
		"lint.tsc": "tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"test": "jest",
		"test.watch": "jest --watch",
		"release": "semantic-release",
		"arkit": "arkit -f src/index.ts -o docs/images/arkit.svg",
		"arkit.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'arkit -f src/index.ts -o docs/images/arkit.svg'",
		"upgrade.packages": "yarn upgrade --latest && rm yarn.lock | true && yarn | true && yarn lint.fix | true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test"
	},
	"dependencies": {
		"@sprucelabs/error": ">=4.0.0",
		"@sprucelabs/log": ">=10.2.294",
		"google-libphonenumber": "^3.2.13",
		"libphonenumber-js": "^1.8.5",
		"lodash": "^4.17.20",
		"mime-db": "^1.45.0",
		"mime-type": "^4.0.0"
	},
	"devDependencies": {
		"@sprucelabs/babel-plugin-schema": ">=3.1.2",
		"@sprucelabs/jest-json-reporter": "^5.1.2",
		"@sprucelabs/semantic-release": ">=4.0.6",
		"@sprucelabs/test": "^7.2.0",
		"@sprucelabs/test-utils": ">=2.0.210",
		"@types/google-libphonenumber": "^7.4.19",
		"@types/lodash": "^4.14.162",
		"@types/mime-db": "^1.43.0",
		"arkit": "^1.6.4",
		"chokidar-cli": "^2.1.0",
		"eslint": "^7.11.0",
		"eslint-config-spruce": "^10.9.91",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"prettier": "^2.1.2",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3",
		"yarn": "^1.22.10"
	},
	"jest": {
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	}
}
