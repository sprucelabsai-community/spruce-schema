{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "attach.tests",
			"port": 5200,
			"restart": true,
			"timeout": 10000
		},
		{
			"type": "node",
			"request": "launch",
			"name": "test.file",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--inspect-brk",
				"--trace-warnings",
				"${workspaceFolder}/node_modules/.bin/jest",
				"${fileBasenameNoExtension}",
				"--detectOpenHandles"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "test.all",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--inspect-brk",
				"--trace-warnings",
				"${workspaceFolder}/node_modules/.bin/jest"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "boot",
			"runtimeExecutable": "yarn",
			"runtimeArgs": [
				"run",
				"--inspect-brk",
				"--trace-warnings",
				"boot"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}