    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test File",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
              "${file}"
            ],
            "skipFiles": [
              "node_modules",
              "async_hooks.js",
              "inspector_async_hooks.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test API",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
              "${workspaceRoot}/index.test.js"
            ],
            "skipFiles": [
              "coverage",
              "node_modules"
            ]
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Test All",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "skipFiles": [
            ]
          }
    ]
}