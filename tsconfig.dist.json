{
	"compilerOptions": {
		"module": "es2015",
		"target": "es6",
		"lib": [
			"es2015",
			"dom"
		],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"outDir": "./build/esm",
		"baseUrl": "src",
		"experimentalDecorators": true,
		"paths": {
			"#spruce/*": [
				".spruce/*"
			]
		}
	},
	"include": [
		"./src/*.ts",
		"./src/**/*.ts",
		"./src/.spruce/**/*.ts"
	],
	"exclude": [
		"**/node_modules/*",
		"./build/*"
	]
}