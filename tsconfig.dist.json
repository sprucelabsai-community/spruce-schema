{
	"compilerOptions": {
		"module": "es2015",
		"target": "es5",
		"lib": [
			"es2015",
			"dom"
		],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "esm",
		"baseUrl": "src",
		"experimentalDecorators": true,
		"paths": {
			"#spruce/*": [
				".spruce/*"
			]
		}
	},
	"include": [
		"./src/*.ts",
		"./src/**/*.ts",
		"src/.spruce/**/*.ts"
	],
	"exclude": [
		"**/node_modules/*",
		"build/*",
		"esm/*",
		"src/__tests__",
		"src/addons",
		"src/AbstractSchemaTest.ts"
	]
}